# Copy this file to .env and fill in your credentials.
# Never commit .env to git.

# ── Publishing Integrations ──────────────────────────────────────────────────

# WordPress
WP_URL=https://your-site.com
WP_USERNAME=your-username
WP_APP_PASSWORD=your-application-password

# HubSpot
HUBSPOT_ACCESS_TOKEN=your-access-token

# Webflow
WEBFLOW_API_TOKEN=your-api-token
WEBFLOW_SITE_ID=your-site-id
WEBFLOW_COLLECTION_ID=your-collection-id

# Ghost
GHOST_URL=https://your-site.ghost.io
GHOST_ADMIN_API_KEY=your-admin-api-key

# Contentful
CONTENTFUL_SPACE_ID=your-space-id
CONTENTFUL_MANAGEMENT_TOKEN=your-management-token
CONTENTFUL_ENVIRONMENT=master

# ── Data Sources (optional — for performance analytics) ───────────────────────

# Google Analytics 4
GA4_PROPERTY_ID=your-property-id
GA4_CREDENTIALS_PATH=./data_sources/ga4-credentials.json

# Google Search Console
GSC_SITE_URL=https://your-site.com
GSC_CREDENTIALS_PATH=./data_sources/gsc-credentials.json

# DataForSEO
DATAFORSEO_LOGIN=your-login
DATAFORSEO_PASSWORD=your-password
